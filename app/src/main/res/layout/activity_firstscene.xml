<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1stscene">

    <Button
        android:id="@+id/dlgbox"
        android:layout_width="600sp"
        android:layout_height="100sp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="#7e7b79"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnnextdlg"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:text="Next"
        android:fontFamily="@raw/adam"
        android:textColor="#7e7b79"
        android:textSize="8sp"
        app:backgroundTint="#FAFDF3"
        app:layout_constraintBottom_toTopOf="@+id/dlgbox"
        app:layout_constraintStart_toStartOf="@+id/dlgbox" />

    <Button
        android:id="@+id/btnskipdlg"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_marginStart="8dp"
        android:text="Skip"
        android:fontFamily="@raw/adam"
        android:textColor="#7e7b79"
        android:textSize="8sp"
        app:backgroundTint="#FAFDF3"
        app:layout_constraintStart_toEndOf="@+id/btnnextdlg"
        app:layout_constraintTop_toTopOf="@+id/btnnextdlg" />

    <Button
        android:id="@+id/btnsavegame"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:text="Save"
        android:fontFamily="@raw/adam"
        android:textColor="#7e7b79"
        android:textSize="8sp"
        app:backgroundTint="#FAFDF3"
        app:layout_constraintBottom_toTopOf="@+id/dlgbox"
        app:layout_constraintEnd_toEndOf="@+id/dlgbox" />

    <Button
        android:id="@+id/btnpause"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Pause"
        android:fontFamily="@raw/adam"
        android:textColor="#7e7b79"
        android:textSize="8sp"
        app:backgroundTint="#FAFDF3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtdlg"
        android:layout_width="570sp"
        android:layout_height="70sp"
        android:elevation="100sp"
        android:text="Insert Dialogue Here"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:fontFamily="@raw/adam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.909" />


</androidx.constraintlayout.widget.ConstraintLayout>