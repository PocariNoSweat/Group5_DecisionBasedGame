<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1stscene">

    <Button
        android:id="@+id/dlgbox"
        android:layout_width="600sp"
        android:layout_height="100sp"
        android:layout_marginBottom="28dp"
        android:clickable="false"
        android:alpha="0.9"
        app:backgroundTint="#7e7b79"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnnextdlg"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@raw/notepad"
        android:text="Next"
        android:textColor="#7e7b79"
        android:textSize="11sp"
        android:textStyle="bold"
        app:backgroundTint="#FAFDF3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dlgbox" />

    <Button
        android:id="@+id/btnskipdlg"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_marginStart="8dp"
        android:fontFamily="@raw/notepad"
        android:text="Skip"
        android:textColor="#7e7b79"
        android:textSize="11sp"
        android:textStyle="bold"
        app:backgroundTint="#FAFDF3"
        app:layout_constraintStart_toEndOf="@+id/btnnextdlg"
        app:layout_constraintTop_toTopOf="@+id/btnnextdlg" />

    <Button
        android:id="@+id/btnsavegame"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_marginStart="8dp"
        android:fontFamily="@raw/notepad"
        android:text="Save"
        android:textColor="#7e7b79"
        android:textSize="11sp"
        android:textStyle="bold"
        app:backgroundTint="#FAFDF3"
        app:layout_constraintStart_toEndOf="@+id/btnskipdlg"
        app:layout_constraintTop_toTopOf="@+id/btnskipdlg" />

    <Button
        android:id="@+id/btnpause"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@raw/notepad"
        android:text="Pause"
        android:textColor="#7e7b79"
        android:textSize="8sp"
        android:textStyle="bold"
        app:backgroundTint="#FAFDF3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtdlg"
        android:layout_width="570sp"
        android:layout_height="70sp"
        android:elevation="100sp"
        android:fontFamily="@raw/adam"
        android:text="Insert Dialogue Here"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.876" />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:elevation="100sp"
        android:fontFamily="@raw/adam"
        android:text="Name"
        android:visibility="invisible"
        android:textColor="#d5b59f"
        app:layout_constraintBottom_toTopOf="@+id/dlgbox"
        app:layout_constraintStart_toStartOf="@+id/dlgbox" />

    <ImageView
        android:id="@+id/imgAlex"
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/alexmodel" />

    <ImageView
        android:id="@+id/imgLeRodge"
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/lerodgemodel" />


</androidx.constraintlayout.widget.ConstraintLayout>