<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green">


    <TextView
        android:id="@+id/txtSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@raw/notepad"
        android:text="Settings"
        android:textColor="#bcbca9"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtLanguages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@raw/notepad"
        android:text="Languages"
        android:textColor="#bcbca9"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btneng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:fontFamily="@raw/adam"
        android:text="English"
        android:textColor="#7e7b79"
        android:textSize="22sp"
        app:backgroundTint="#bcbca9"
        app:layout_constraintStart_toEndOf="@+id/txtLanguages"
        app:layout_constraintTop_toBottomOf="@+id/txtSettings" />

    <Button
        android:id="@+id/btnceb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:fontFamily="@raw/adam"
        android:text="Cebuano"
        android:textColor="#7e7b79"
        android:textSize="22sp"
        app:backgroundTint="#bcbca9"
        app:layout_constraintStart_toEndOf="@+id/btneng"
        app:layout_constraintTop_toTopOf="@+id/btneng" />

    <Button
        android:id="@+id/btnjap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:fontFamily="@raw/adam"
        android:text="日本"
        android:textColor="#7e7b79"
        android:textSize="22sp"
        app:backgroundTint="#bcbca9"
        app:layout_constraintStart_toStartOf="@+id/btneng"
        app:layout_constraintTop_toBottomOf="@+id/btneng" />

    <Button
        android:id="@+id/btntag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:fontFamily="@raw/adam"
        android:text="Tagalog"
        android:textColor="#7e7b79"
        android:textSize="22sp"
        app:backgroundTint="#bcbca9"
        app:layout_constraintStart_toEndOf="@+id/btnceb"
        app:layout_constraintTop_toTopOf="@+id/btnceb" />

    <Button
        android:id="@+id/btnrus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:fontFamily="@raw/adam"
        android:text="русский"
        android:textColor="#7e7b79"
        android:textSize="22sp"
        app:backgroundTint="#bcbca9"
        app:layout_constraintStart_toEndOf="@+id/btnjap"
        app:layout_constraintTop_toTopOf="@+id/btnjap" />

    <Button
        android:id="@+id/btnchi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:fontFamily="@raw/adam"
        android:text="中国人"
        android:textColor="#7e7b79"
        android:textSize="22sp"
        app:backgroundTint="#bcbca9"
        app:layout_constraintStart_toEndOf="@+id/btnrus"
        app:layout_constraintTop_toTopOf="@+id/btnrus" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:text="Back"
        android:textColor="#7e7b79"
        app:backgroundTint="#bcbca9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtlogsettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:fontFamily="@raw/adam"
        android:text="Language Applied"
        android:textColor="#bcbca9"
        android:textSize="40sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>