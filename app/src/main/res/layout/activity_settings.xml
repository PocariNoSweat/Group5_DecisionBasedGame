<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green">


    <TextView
        android:id="@+id/txtSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@raw/notepad"
        android:text="Settings"
        android:textColor="#bcbca9"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLanguages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="@raw/notepad"
        android:text="Languages"
        android:textColor="#bcbca9"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/selectmusictxt"
        app:layout_constraintTop_toBottomOf="@+id/selectmusictxt" />

    <TextView
        android:id="@+id/selectmusictxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@raw/notepad"
        android:text="Select Music"
        android:textColor="#bcbca9"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/musicbtn1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/circle"
        android:text="1"
        android:textColor="#7e7b79"
        app:layout_constraintStart_toEndOf="@+id/selectmusictxt"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/musicbtn3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/circle"
        android:text="2"
        android:textColor="#7e7b79"
        app:layout_constraintStart_toEndOf="@+id/musicbtn1"
        app:layout_constraintTop_toTopOf="@+id/musicbtn1" />

    <Button
        android:id="@+id/musicbtn2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/circle"
        android:text="3"
        android:textColor="#7e7b79"
        app:layout_constraintStart_toEndOf="@+id/musicbtn3"
        app:layout_constraintTop_toTopOf="@+id/musicbtn3" />

    <TextView
        android:id="@+id/englanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="60dp"
        android:clickable="true"
        android:fontFamily="@raw/adam"
        android:text="English"
        android:textColor="#7e7b79"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/txtLanguages"
        app:layout_constraintTop_toBottomOf="@+id/musicbtn1" />

    <TextView
        android:id="@+id/ceblanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:fontFamily="@raw/adam"
        android:text="Cebuano"
        android:textColor="#7e7b79"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/englanguage"
        app:layout_constraintTop_toTopOf="@+id/englanguage" />

    <TextView
        android:id="@+id/japlanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:clickable="true"
        android:fontFamily="@raw/adam"
        android:text="日本"
        android:textColor="#7e7b79"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/englanguage"
        app:layout_constraintTop_toBottomOf="@+id/englanguage" />

    <TextView
        android:id="@+id/taglanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:fontFamily="@raw/adam"
        android:text="Tagalog"
        android:textColor="#7e7b79"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/ceblanguage"
        app:layout_constraintTop_toTopOf="@+id/ceblanguage" />

    <TextView
        android:id="@+id/ruslanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:fontFamily="@raw/adam"
        android:text="русский"
        android:textColor="#7e7b79"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/japlanguage"
        app:layout_constraintTop_toTopOf="@+id/japlanguage" />

    <TextView
        android:id="@+id/chilanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:fontFamily="@raw/adam"
        android:text="中国人"
        android:textColor="#7e7b79"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/ruslanguage"
        app:layout_constraintTop_toTopOf="@+id/ruslanguage" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:text="Back"
        android:textColor="#7e7b79"
        app:backgroundTint="#bcbca9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtlogsettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:fontFamily="@raw/notepad"
        android:text="Text Log"
        android:textSize="36sp"
        android:textColor="#bcbca9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSettings" />

</androidx.constraintlayout.widget.ConstraintLayout>